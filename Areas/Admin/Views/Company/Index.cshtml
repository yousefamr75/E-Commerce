@using E_Commerce.Models;
@using Models

@model List<Company>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> Create New Company </a>
        </div>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    City
                </th>
                <th>
                    State

                </th>
                <th>
                    phoneNumber
                </th>
               

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.City</td>
                    <td>@obj.State</td>
                    <td>@obj.phoneNumber</td>
                    


                    <td>
                        <div class="w-75 btn-group role="group">
                            <a asp-controller="Company" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>
                                Edite
                            </a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i>
                                Delete
                            </a>

                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <img src=""
</div>